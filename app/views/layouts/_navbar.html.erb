<div class="inner">
  <h3 class="masthead-brand"><%= link_to image_tag('/images/logo.png'), root_path, class: 'logo navbar-brand' %></h3>

  <nav>
    <ul class="nav masthead-nav">
      <% if logged_in? %>
        <li><%= link_to 'Mypage', user_months_path(@user) %></li>
        <li><%= link_to 'Logout', logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Signup', signup_path %></li>
        <li><%= link_to 'Login', login_path %></li>
      <% end %>
    </ul>
  </nav>
</div>